<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_controller">

    <fragment
        android:id="@+id/navigation_controller"
        android:name="org.mantabots.robosoccer.ui.controller.ControllerFragment"
        android:label="@string/controller_title"
        android:textAllCaps="true"
        tools:layout="@layout/fragment_controller" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="org.mantabots.robosoccer.ui.settings.SettingsFragment"
        android:label="@string/settings_title"
        android:textAllCaps="true"
        tools:layout="@layout/fragment_settings" />
</navigation>